{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "GettingsStarted [Build]",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/BridgingIT.DevKit.Examples.GettingStarted.sln",
        "--nologo",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "GettingsStarted [Clean]",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/BridgingIT.DevKit.Examples.GettingStarted.sln",
        "--nologo",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "GettingsStarted - Presentation.Web.Server [Build]",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Presentation.Web.Server/Presentation.Web.Server.csproj",
        "--nologo",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "GettingsStarted - Presentation.Web.Server [Publish]",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/Presentation.Web.Server/Presentation.Web.Server.csproj",
        "--nologo",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "GettingsStarted - Presentation.Web.Server [Watch]",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/Presentation.Web.Server/Presentation.Web.Server.csproj",
        "--nologo"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "GettingsStarted - Core [Unit Test]",
      "command": "dotnet",
      "type": "shell",
      "args": ["test", "${workspaceFolder}/tests/Modules/CoreModule/CoreModule.UnitTests/CoreModule.UnitTests.csproj"],
      "group": "test",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "GettingsStarted - Core [Integration Test]",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "test",
        "${workspaceFolder}/tests/Modules/CoreModule/CoreModule.IntegrationTests/CoreModule.IntegrationTests.csproj"
      ],
      "group": "test",
      "problemMatcher": "$msCompile"
    }
    ,
    {
      "label": "GettingsStarted - Presentation.Web.Server [Docker Build & Run]",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-File",
        "${workspaceFolder}/.vscode/run-docker-presentation.ps1"
      ],
      "problemMatcher": []
    }
  ]
}
