{
  "$schema": "https://www.schemastore.org/template.json",
  "author": "BridgingIT",
  "classifications": [
    "Module"
  ],
  "name": "BridgingIT.DevKit Module",
  "identity": "BridgingIT.DevKit.Module.Template",
  "shortName": "bitdevkitmodule",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "sourceName": "CoreModule",
  "preferNameDirectory": false,
  "symbols": {
    "ModuleName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "Core",
      "replaces": "CoreModule",
      "fileRename": "CoreModule"
    },
    "ModuleNameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ModuleName",
        "casing": "lowerCase"
      },
      "replaces": "coremodule"
    },
    "ModuleNameLowerShort": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ModuleName",
        "casing": "lowerCase",
        "value": "${ModuleName}"
      },
      "replaces": "core"
    }
  },
  "primaryOutputs": [
    {
      "path": "CoreModule.Application.csproj"
    },
    {
      "path": "CoreModule.Domain.csproj"
    },
    {
      "path": "CoreModule.Infrastructure.csproj"
    },
    {
      "path": "CoreModule.IntegrationTests.csproj"
    },
    {
      "path": "CoreModule.Presentation.csproj"
    },
    {
      "path": "CoreModule.UnitTests.csproj"
    }
  ],
  "postActions": [
    {
      "description": "Add module projects to solution",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "manualInstructions": [
        {
          "text": "Add generated module projects to solution manually if scripts were not allowed."
        }
      ],
      "applyFileRenamesToArgs": [
        "args"
      ],
      "args": {
        "executable": "dotnet",
        "args": "sln ../../../TestSolution.slnx add \"../../../src/Modules/CoreModule/CoreModule.Application/CoreModule.Application.csproj\" \"../../../src/Modules/CoreModule/CoreModule.Domain/CoreModule.Domain.csproj\" \"../../../src/Modules/CoreModule/CoreModule.Infrastructure/CoreModule.Infrastructure.csproj\" \"../../../src/Modules/CoreModule/CoreModule.Presentation/CoreModule.Presentation.csproj\" \"../../../src/Modules/CoreModule/CoreModule.IntegrationTests/CoreModule.IntegrationTests.csproj\" \"../../../src/Modules/CoreModule/CoreModule.UnitTests/CoreModule.UnitTests.csproj\""
      },
      "continueOnError": true
    }
