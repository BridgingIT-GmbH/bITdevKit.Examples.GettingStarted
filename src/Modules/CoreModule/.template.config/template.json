{
  "$schema": "https://www.schemastore.org/template.json",
  "author": "BridgingIT",
  "classifications": [
    "Module"
  ],
  "name": "BridgingIT.DevKit Module",
  "identity": "BridgingIT.DevKit.Module.Template",
  "shortName": "bdkmodule",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "sourceName": "CoreModule",
  "preferNameDirectory": false,
  "symbols": {
    "ModuleName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "Core",
      "replaces": "CoreModule",
      "fileRename": "CoreModule"
    },
    "ModuleNameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ModuleName",
        "casing": "lowerCase"
      },
      "replaces": "coremodule"
    },
    "ModuleNameLowerShort": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ModuleName",
        "casing": "lowerCase",
        "value": "${ModuleName}"
      },
      "replaces": "core"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/*g.cs"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "CoreModule.Application.csproj"
    },
    {
      "path": "CoreModule.Domain.csproj"
    },
    {
      "path": "CoreModule.Infrastructure.csproj"
    },
    {
      "path": "CoreModule.IntegrationTests.csproj"
    },
    {
      "path": "CoreModule.Presentation.csproj"
    },
    {
      "path": "CoreModule.UnitTests.csproj"
    }
  ],
  "postActions": [
    {
      "description": "Post action for BridgingIT.DevKit Module template.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "manualInstructions": [
        {
          "text": "Run .bdk/template/post-action-bdkmodule.ps1 manually if scripts were not allowed."
        }
      ],
      "applyFileRenamesToArgs": [
        "args"
      ],
      "args": {
        "executable": "pwsh",
        "args": "-NoProfile -ExecutionPolicy Bypass -File \"../../../.bdk/template/post-action-bdkmodule.ps1\" \"../../../src/Modules/CoreModule\""
      },
      "continueOnError": true
    }
  ]
}