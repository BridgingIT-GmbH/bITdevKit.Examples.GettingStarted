{
  "$schema": "https://www.schemastore.org/template.json",
  "author": "BridgingIT GmbH",
  "classifications": [
    "Solution"
  ],
  "name": "bITdevKit Solution",
  "identity": "BridgingIT.DevKit.Solution.Template",
  "shortName": "bdksolution",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "symbols": {
    "SolutionName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "BridgingIT.DevKit.Examples.GettingStarted",
      "replaces": "BridgingIT.DevKit.Examples.GettingStarted",
      "fileRename": "BridgingIT.DevKit.Examples.GettingStarted"
    },
    "SolutionNameUnderscore": {
      "type": "generated",
      "generator": "regex",
      "parameters": {
        "source": "SolutionName",
        "steps": [
          {
            "regex": "\\.",
            "replacement": "_"
          }
        ]
      }
    },
    "SolutionNameAlt": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "SolutionNameUnderscore",
        "casing": "lowerCase"
      },
      "replaces": "bit_devkit_gettingstarted",
      "fileRename": "bit_devkit_gettingstarted"
    },
    "ModuleName": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "Core",
      "replaces": "CoreModule",
      "fileRename": "CoreModule"
    },
    "ModuleNameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ModuleName",
        "casing": "lowerCase"
      },
      "replaces": "coremodule"
    },
    "ModuleNameLowerShort": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ModuleName",
        "casing": "lowerCase",
        "value": "${ModuleName}"
      },
      "replaces": "core"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**/*",
            ".gitignore",
            ".gitattributes",
            ".azure/azure-pipelines-template.yml",
            "**/*g.cs",
            "bITdevKit.Templates.csproj",
            "README-template.md"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "description": "Post action for bITdevKit Solution template.",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "manualInstructions": [
        {
          "text": "Run .bdk/template/post-action-bdksolution.ps1 manually if scripts were not allowed."
        }
      ],
      "applyFileRenamesToArgs": [
        "args"
      ],
      "args": {
        "executable": "pwsh",
        "args": "-NoProfile -ExecutionPolicy Bypass -File \"./.bdk/template/post-action-bdksolution.ps1\" \"./src/Modules/CoreModule\""
      },
      "continueOnError": true
    }
  ]
}