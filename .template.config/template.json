{
  "$schema": "https://www.schemastore.org/template.json",
  "author": "BridgingIT",
  "classifications": [
    "Solution"
  ],
  "name": "BridgingIT.DevKit Solution",
  "identity": "BridgingIT.DevKit.Solution.Template",
  "shortName": "bitdevkitsolution",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "symbols": {
    "SolutionName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "BridgingIT.DevKit.Examples.GettingStarted",
      "replaces": "BridgingIT.DevKit.Examples.GettingStarted",
      "fileRename": "BridgingIT.DevKit.Examples.GettingStarted"
    },
    "SolutionNameUnderscore": {
      "type": "generated",
      "generator": "regex",
      "parameters": {
        "source": "SolutionName",
        "steps": [
          {
            "regex": "\\.",
            "replacement": "_"
          }
        ]
      }
    },
    "SolutionNameAlt": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "SolutionNameUnderscore",
        "casing": "lowerCase"
      },
      "replaces": "bit_devkit_gettingstarted",
      "fileRename": "bit_devkit_gettingstarted"
    },
    "ModuleName": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "Core",
      "replaces": "CoreModule",
      "fileRename": "CoreModule"
    },
    "ModuleNameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ModuleName",
        "casing": "lowerCase"
      },
      "replaces": "coremodule"
    },
    "ModuleNameLowerShort": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ModuleName",
        "casing": "lowerCase",
        "value": "${ModuleName}"
      },
      "replaces": "core"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**/*",
            ".gitignore",
            ".gitattributes",
            ".azure/azure-pipelines-template.yml",
            "BridgingIT.DevKit.Templates.csproj",
            "README-template.md"
          ]
        }
      ]
    }
  ]
}